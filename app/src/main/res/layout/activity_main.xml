<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/image_profile"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/ic_baseline_person_outline_24"
    app:civ_border_width="2dp"
    app:civ_border_color="#FF5900"
    android:background="@drawable/style_image"
    android:layout_marginTop="50dp"/>

    <Switch
        android:id="@+id/switch_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image_profile"
        android:layout_marginEnd="50dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_profile"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        android:text="abc@gmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/button_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_email"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_button"
        android:text="Upgrade to PRO"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
    </Button>

    <TextView
        android:id="@+id/cardviewfirst"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/style_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_pro" />

    <ImageView
        android:id="@+id/image_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_privacy_tip_24"
        app:layout_constraintStart_toStartOf="@id/cardviewfirst"
        app:layout_constraintTop_toTopOf="@id/cardviewfirst"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfirst" />
    <TextView
        android:id="@+id/text_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_privacy"
        android:text="Privacy"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cardviewfirst"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfirst"
        android:layout_marginStart="10dp" />
    <ImageButton
        android:id="@+id/button_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/cardviewfirst"
        android:layout_marginEnd="20dp"
        android:background="#DCBFBF"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toTopOf="@id/cardviewfirst"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfirst"/>

    <TextView
        android:id="@+id/cardviewsecond"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/style_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardviewfirst" />

    <ImageView
        android:id="@+id/image_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_history_24"
        app:layout_constraintStart_toStartOf="@id/cardviewsecond"
        app:layout_constraintTop_toTopOf="@id/cardviewsecond"
        app:layout_constraintBottom_toBottomOf="@id/cardviewsecond" />
    <TextView
        android:id="@+id/text_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_history"
        android:text="Purchase History"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cardviewsecond"
        app:layout_constraintBottom_toBottomOf="@id/cardviewsecond"
        android:layout_marginStart="10dp" />
    <ImageButton
        android:id="@+id/button_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/cardviewsecond"
        android:layout_marginEnd="20dp"
        android:background="#DCBFBF"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toTopOf="@id/cardviewsecond"
        app:layout_constraintBottom_toBottomOf="@id/cardviewsecond"/>

    <TextView
        android:id="@+id/cardviewthird"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/style_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardviewsecond" />

    <ImageView
        android:id="@+id/image_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_help_outline_24"
        app:layout_constraintStart_toStartOf="@id/cardviewthird"
        app:layout_constraintTop_toTopOf="@id/cardviewthird"
        app:layout_constraintBottom_toBottomOf="@id/cardviewthird" />
    <TextView
        android:id="@+id/text_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_help"
        android:text="Help &amp; Support"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cardviewthird"
        app:layout_constraintBottom_toBottomOf="@id/cardviewthird"
        android:layout_marginStart="10dp" />
    <ImageButton
        android:id="@+id/button_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/cardviewthird"
        android:layout_marginEnd="20dp"
        android:background="#DCBFBF"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toTopOf="@id/cardviewthird"
        app:layout_constraintBottom_toBottomOf="@id/cardviewthird"/>

    <TextView
        android:id="@+id/cardviewfourth"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/style_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardviewthird" />

    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintStart_toStartOf="@id/cardviewfourth"
        app:layout_constraintTop_toTopOf="@id/cardviewfourth"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfourth" />
    <TextView
        android:id="@+id/text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_privacy"
        android:text="Settings"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cardviewfourth"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfourth"
        android:layout_marginStart="10dp" />
    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/cardviewfourth"
        android:layout_marginEnd="20dp"
        android:background="#DCBFBF"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toTopOf="@id/cardviewfourth"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfourth"/>


    <ImageView
        android:id="@+id/image_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_person_add_alt_1_24"
        app:layout_constraintStart_toStartOf="@id/cardviewfifth"
        app:layout_constraintTop_toTopOf="@id/cardviewfifth"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfifth" />
    <TextView
        android:id="@+id/text_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_invite"
        android:text="Invite a friend"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/cardviewfifth"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfifth"
        android:layout_marginStart="10dp" />
    <ImageButton
        android:id="@+id/button_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/cardviewfifth"
        android:layout_marginEnd="20dp"
        android:background="#DCBFBF"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        app:layout_constraintTop_toTopOf="@id/cardviewfifth"
        app:layout_constraintBottom_toBottomOf="@id/cardviewfifth"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/style_buttonlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>